        });

        function updateContent(lang) {
            // Update title and header
            document.getElementById('backHomeText').textContent = lang === 'tr' ? 'Ana Sayfaya Dön' : 'Back to Home';
            document.getElementById('termsTitle').textContent = lang === 'tr' ? 'Kullanım Koşulları' : 'Terms of Service';
