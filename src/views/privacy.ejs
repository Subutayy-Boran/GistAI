            document.getElementById('backHomeText').textContent = lang === 'tr' ? 'Ana Sayfaya Dön' : 'Back to Home';
            document.getElementById('privacyTitle').textContent = lang === 'tr' ? 'Gizlilik Politikası' : 'Privacy Policy';
            document.getElementById('lastUpdatedText').textContent = lang === 'tr' ? 'Son Güncelleme' : 'Last Updated';

            // Update content
            document.getElementById('privacyContent').innerHTML = privacyContent[lang] || privacyContent.en;
        }

        // Listen for language changes
        window.addEventListener('storage', (e) => {
            if (e.key === 'language') {
                updateContent(e.newValue);
            }
