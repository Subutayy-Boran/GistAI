    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>Dashboard - GistAI</title>

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&family=JetBrains+Mono:wght@400;500&display=swap"
        rel="stylesheet">

    <!-- CSS -->
    <link rel="stylesheet" href="/css/landing.css">
    <link rel="stylesheet" href="/css/dashboard.css">
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">
</head>

<body>
    <!-- Header (Fixed) -->
    <nav class="nav" style="width: 100%; border-bottom: 1px solid var(--border);">
        <div class="container nav-container" style="max-width: 100%; padding: 0 24px;">
            <a href="#" class="logo" onclick="showTab('news')">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" class="logo-icon" stroke="currentColor"
                    stroke-width="2">
                    <path
                        d="M12 2a2 2 0 0 1 2 2c0 .74-.4 1.39-1 1.73V7h1a7 7 0 0 1 7 7h1a1 1 0 0 1 1 1v3a1 1 0 0 1-1 1h-1v1a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-1H2a1 1 0 0 1-1-1v-3a1 1 0 0 1 1-1h1a7 7 0 0 1 7-7V5.73C9.4 5.39 9 4.74 9 4a2 2 0 0 1 2-2z" />
                    <path d="M8 11h.01" />
                    <path d="M16 11h.01" />
                    <path d="M9 16c.5 1 2 1 2.5 1s2-1 2.5-1" />
                </svg>
                GistAI
            </a>

            <!-- Mobile Toggle -->
            <button class="mobile-menu-btn" id="sidebar-toggle" style="display: none;">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M3 12h18" />
                    <path d="M3 6h18" />
                    <path d="M3 18h18" />
                </svg>
            </button>

            <!-- User Menu (Tablet/Desktop) -->
            <div class="nav-actions">
                <!-- Language Selector -->
                <div class="lang-selector" style="margin-right: 16px;">
                    <button class="lang-btn" id="lang-toggle" aria-label="Select Language">
                        <span id="current-lang-flag">üá¨üáß</span>
                        <span>EN</span>
                        <svg width="12" height="12" viewBox="0 0 12 12" fill="none" stroke="currentColor">
                            <path d="M3 4.5L6 7.5L9 4.5" stroke-width="1.5" />
                        </svg>
                    </button>
                    <div class="lang-dropdown" id="lang-dropdown">
                        <div class="lang-option" data-lang="en">üá¨üáß English</div>
                        <div class="lang-option" data-lang="tr">üáπüá∑ T√ºrk√ße</div>
                        <div class="lang-option" data-lang="es">üá™üá∏ Espa√±ol</div>
                        <div class="lang-option" data-lang="de">üá©üá™ Deutsch</div>
                        <div class="lang-option" data-lang="fr">üá´üá∑ Fran√ßais</div>
                    </div>
                </div>

                <span id="userEmail" style="color: var(--text-secondary); font-size: 0.9rem;"></span>
                <button onclick="logout()" class="btn btn-sm btn-outline" data-i18n="dashboard.logout">Logout</button>
            </div>
        </div>
    </nav>

    <div class="dashboard-container">
        <!-- Sidebar -->
        <aside class="sidebar" id="sidebar">
            <nav class="sidebar-nav">
                <a href="#" onclick="showTab('news')" class="active">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                        <polyline points="14 2 14 8 20 8"></polyline>
                        <line x1="16" y1="13" x2="8" y2="13"></line>
                        <line x1="16" y1="17" x2="8" y2="17"></line>
                        <polyline points="10 9 9 9 8 9"></polyline>
                    </svg>
                    <span data-i18n="dashboard.newsFeed">News Feed</span>
                </a>
                <a href="#" onclick="showTab('subscriptions')">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                        <circle cx="9" cy="7" r="4"></circle>
                        <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                        <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                    </svg>
                    <span data-i18n="dashboard.subscriptions">Subscriptions</span>
                </a>
                <a href="#" onclick="showTab('profile')">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="12" cy="12" r="3"></circle>
                        <path
                            d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-2 2 2 2 0 0 1-2-2v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1-2-2 2 2 0 0 1 2-2h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06a1.65 1.65 0 0 0 1.82.33H9a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 2-2 2 2 0 0 1 2 2v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82V9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 2 2 2 2 0 0 1-2 2h-.09a1.65 1.65 0 0 0-1.51 1z">
                        </path>
                    </svg>
                    <span data-i18n="dashboard.settings">Settings</span>
                </a>
            </nav>

            <div class="sidebar-footer">
                <div class="plan-info">
                    <div class="plan-name">
                        <span id="tierName">Free Plan</span>
                        <a href="#" onclick="showTab('profile')"
                            style="color: var(--primary-400); font-size: 0.8rem; text-decoration: none;"
                            data-i18n="dashboard.upgrade">Upgrade</a>
                    </div>
                    <div class="plan-usage">
                        <span id="limitInfo">-- / --</span> <span data-i18n="dashboard.slotsUsed">slots used</span>
                    </div>
                </div>
            </div>
        </aside>

        <!-- Main Content -->
        <main class="dashboard-main">
            <!-- News Tab -->
            <div id="newsTab" class="tab-content" style="display: block;">
                <div class="section-header">
                    <div>
                        <h2 class="section-title" data-i18n="dashboard.newsFeed">News Feed</h2>
                        <p class="section-subtitle" data-i18n="hero.subtitle">AI-filtered news from your subscriptions
                        </p>
                    </div>
                    <button class="btn btn-secondary" onclick="loadNews()">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                            stroke-width="2" style="margin-right: 4px;">
                            <path d="M23 4v6h-6"></path>
                            <path d="M1 20v-6h6"></path>
                            <path d="M3.51 9a9 9 0 0 1 14.85-3.36L23 10M1 14l4.64 4.36A9 9 0 0 0 20.49 15"></path>
                        </svg>
                        <span data-i18n="dashboard.refresh">Refresh</span>
                    </button>
                </div>

                <div id="newsGrid" class="news-grid">
                    <div class="loader" style="margin: 3rem auto;"></div>
                </div>
            </div>

            <!-- Subscriptions Tab -->
            <div id="subscriptionsTab" class="tab-content" style="display: none;">
                <div class="page-header">
                    <h2 class="page-title" data-i18n="dashboard.subscriptions">Subscriptions</h2>
                    <button onclick="showAddModal()" class="btn btn-primary">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                            stroke-width="2" style="margin-right: 6px;">
                            <line x1="12" y1="5" x2="12" y2="19"></line>
                            <line x1="5" y1="12" x2="19" y2="12"></line>
                        </svg>
                        <span data-i18n="dashboard.addNew">Add New</span>
                    </button>
                </div>

                <div id="limitWarning" style="display: none;" class="alert alert-error">
                    <p data-i18n="dashboard.freePlanLimit">‚ö†Ô∏è You've reached the free plan limit. Upgrade to Premium for
                        unlimited accounts.</p>
                </div>

                <div id="subscriptionsList">
                    <div class="loader" style="margin: 3rem auto;"></div>
                </div>
            </div>

            <!-- Profile Tab -->
            <div id="profileTab" class="tab-content" style="display: none;">
                <h2 class="section-title" data-i18n="dashboard.settings">Settings</h2>

                <div class="bento-grid"
                    style="grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); margin-top: 24px;">
                    <!-- Subscription Card -->
                    <div class="news-card">
                        <h3 data-i18n="dashboard.subscriptionPlan">üíé Subscription Plan</h3>
                        <p id="tierStatus" style="color: var(--text-secondary); margin-bottom: 16px;"><span
                                data-i18n="dashboard.currentPlan">Current Plan:</span>
                            <strong data-i18n="dashboard.free">Free</strong>
                        </p>
                        <p style="margin-bottom: 24px;" data-i18n="dashboard.upgradePremiumDesc">Upgrade to Premium for
                            unlimited accounts, advanced analysis and
                            more.</p>

                        <div
                            style="background: rgba(99, 102, 241, 0.1); padding: 1.5rem; border-radius: 12px; margin-bottom: 1rem;">
                            <div style="font-size: 2rem; font-weight: bold;">$19<span
                                    style="font-size: 1rem; color: var(--text-secondary);">/mo</span></div>
                            <ul
                                style="list-style: none; padding: 0; margin: 12px 0 0 0; color: var(--text-secondary); font-size: 0.9rem;">
                                <li style="margin-bottom: 4px;">‚úì <span data-i18n="dashboard.unlimitedTwitter">Unlimited
                                        Twitter accounts</span></li>
                                <li style="margin-bottom: 4px;">‚úì <span data-i18n="dashboard.categoryFiltering">Category
                                        filtering</span></li>
                                <li>‚úì <span data-i18n="dashboard.premiumSupport">Premium support</span></li>
                            </ul>
                        </div>

                        <a href="https://boranfindikci.gumroad.com/l/ftrkj" id="upgradeBtn"
                            class="btn btn-primary btn-block" target="_blank" style="text-decoration: none;">
                            üöÄ <span data-i18n="dashboard.upgradeToPremium">Upgrade to Premium</span>
                        </a>
                        <p style="font-size: 0.8rem; color: var(--text-tertiary); margin-top: 12px; text-align: center;"
                            data-i18n="dashboard.securePayment">
                            Secure payment via Gumroad
                        </p>
                    </div>

                    <!-- Telegram Card -->
                    <div class="news-card">
                        <h3 data-i18n="dashboard.connectTelegram">üì± Telegram Connection</h3>
                        <p style="color: var(--text-secondary); margin-bottom: 16px;"
                            data-i18n="dashboard.connectTelegramDesc">Connect your Telegram account to
                            receive instant news notifications.</p>

                        <div id="telegramConnected"
                            style="display: none; background: rgba(34, 197, 94, 0.1); padding: 16px; border-radius: 8px; border: 1px solid rgba(34, 197, 94, 0.2);">
                            <p style="color: #86efac; margin: 0;">‚úÖ <span data-i18n="dashboard.connectedAs">Connected
                                    as</span> <strong id="telegramUsername"></strong>
                            </p>
                        </div>

                        <div id="telegramNotConnected">
                            <ol
                                style="color: var(--text-secondary); margin: 0 0 24px 20px; padding: 0; line-height: 1.6;">
                                <li><span data-i18n="dashboard.startBot">Start the bot</span> <code>@GistAI_bot</code>
                                    <span data-i18n="dashboard.onTelegram">on Telegram</span>
                                </li>
                                <li><span data-i18n="dashboard.clickButtonGenerateCode">Click the button below to
                                        generate a code</span></li>
                                <li><span data-i18n="dashboard.sendCodeToBot">Send</span> <code>/connect CODE</code>
                                    <span data-i18n="dashboard.toTheBot">to the bot</span>
                                </li>
                            </ol>

                            <button onclick="generateTelegramCode()" class="btn btn-outline btn-block"
                                id="generateCodeBtn" data-i18n="dashboard.generateCode">Generate Connection
                                Code</button>

                            <div id="telegramCode"
                                style="display: none; margin-top: 20px; padding: 20px; background: rgba(255,255,255,0.05); border-radius: 12px; text-align: center;">
                                <p style="color: var(--text-secondary); margin: 0 0 8px 0; font-size: 0.9rem;"
                                    data-i18n="dashboard.yourCode">Your
                                    Code:</p>
                                <div style="font-size: 2rem; font-weight: bold; color: var(--primary-400); font-family: 'JetBrains Mono', monospace; letter-spacing: 2px;"
                                    id="codeDisplay"></div>
                                <p style="color: var(--text-tertiary); margin: 8px 0 0 0; font-size: 0.8rem;"
                                    data-i18n="dashboard.validFor">Valid for
                                    10 minutes</p>
                            </div>
                        </div>
                    </div>

                    <!-- Account Settings Card -->
                    <div class="news-card">
                        <h3 data-i18n="dashboard.accountInfo">üë§ Account Information</h3>
                        <div style="margin: 16px 0;">
                            <label
                                style="display: block; color: var(--text-secondary); font-size: 0.85rem; margin-bottom: 4px;"
                                data-i18n="dashboard.emailAddress">Email Address</label>
                            <div
                                style="padding: 12px; background: rgba(255,255,255,0.05); border-radius: 8px; font-family: monospace; color: var(--text-primary);">
                                <span id="settingsEmail">loading...</span>
                            </div>
                        </div>

                        <div style="margin: 16px 0;">
                            <label
                                style="display: block; color: var(--text-secondary); font-size: 0.85rem; margin-bottom: 4px;"
                                data-i18n="dashboard.accountCreated">Account Created</label>
                            <div style="padding: 12px; background: rgba(255,255,255,0.05); border-radius: 8px;">
                                <span id="accountCreatedDate">-</span>
                            </div>
                        </div>

                        <div style="margin: 24px 0 16px 0; padding-top: 16px; border-top: 1px solid var(--border);">
                            <button onclick="handleLogout()" class="btn btn-outline btn-block"
                                style="margin-bottom: 12px;">
                                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                    stroke-width="2" style="margin-right: 8px;">
                                    <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path>
                                    <polyline points="16 17 21 12 16 7"></polyline>
                                    <line x1="21" y1="12" x2="9" y2="12"></line>
                                </svg>
                                <span data-i18n="dashboard.logout">Logout</span>
                            </button>
                        </div>
                    </div>

                    <!-- Danger Zone Card -->
                    <div class="news-card" style="border: 1px solid rgba(239, 68, 68, 0.3);">
                        <h3 style="color: #ef4444;">‚ö†Ô∏è <span data-i18n="dashboard.dangerZone">Danger Zone</span></h3>
                        <p style="color: var(--text-secondary); margin-bottom: 16px;"
                            data-i18n="dashboard.deleteAccountDesc">
                            Once you delete your account, there is no going back. All your data, subscriptions, and
                            settings will be permanently removed.
                        </p>
                        <button onclick="showDeleteAccountModal()" class="btn btn-outline btn-block"
                            style="border-color: #ef4444; color: #ef4444;">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                stroke-width="2" style="margin-right: 8px;">
                                <polyline points="3 6 5 6 21 6"></polyline>
                                <path
                                    d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2">
                                </path>
                                <line x1="10" y1="11" x2="10" y2="17"></line>
                                <line x1="14" y1="11" x2="14" y2="17"></line>
                            </svg>
                            <span data-i18n="dashboard.deleteAccount">Delete Account</span>
                        </button>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <!-- Delete Account Confirmation Modal -->
    <div id="deleteAccountModal" class="modal-overlay" style="display: none;">
        <div class="modal-card" style="max-width: 500px;">
            <div class="modal-header">
                <h3 style="margin: 0; font-size: 1.5rem; color: #ef4444;" data-i18n="dashboard.confirmDelete">‚ö†Ô∏è Confirm
                    Account Deletion</h3>
                <button class="modal-close" onclick="hideDeleteAccountModal()">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M18 6L6 18M6 6l12 12"></path>
                    </svg>
                </button>
            </div>

            <div class="modal-content" style="padding: 24px;">
                <p style="color: var(--text-secondary); margin-bottom: 16px;" data-i18n="dashboard.deleteWarning">
                    This action cannot be undone. This will permanently delete your account and remove all your data
                    from our servers.
                </p>

                <div
                    style="background: rgba(239, 68, 68, 0.1); padding: 16px; border-radius: 8px; margin-bottom: 24px; border: 1px solid rgba(239, 68, 68, 0.3);">
                    <p style="margin: 0; font-size: 0.9rem; color: var(--text-secondary);">
                        <strong style="color: #ef4444;" data-i18n="dashboard.willBeDeleted">The following will be
                            deleted:</strong><br>
                        ‚Ä¢ <span data-i18n="dashboard.allSubscriptions">All your Twitter subscriptions</span><br>
                        ‚Ä¢ <span data-i18n="dashboard.savedNews">All saved news items</span><br>
                        ‚Ä¢ <span data-i18n="dashboard.accountSettings">Your account settings and preferences</span><br>
                        ‚Ä¢ <span data-i18n="dashboard.telegramConnection">Telegram bot connection</span>
                    </p>
                </div>

                <p style="margin-bottom: 16px; font-weight: 500;" data-i18n="dashboard.typeDelete">Type <code
                        style="background: rgba(255,255,255,0.1); padding: 2px 8px; border-radius: 4px; color: #ef4444;">DELETE</code>
                    to confirm:</p>

                <input type="text" id="deleteConfirmInput" placeholder="DELETE"
                    style="width: 100%; padding: 12px; background: rgba(255,255,255,0.05); border: 1px solid var(--border); border-radius: 8px; color: var(--text-primary); font-size: 1rem; margin-bottom: 24px;">

                <div style="display: flex; gap: 12px;">
                    <button onclick="hideDeleteAccountModal()" class="btn btn-outline" style="flex: 1;">
                        <span data-i18n="dashboard.cancel">Cancel</span>
                    </button>
                    <button onclick="confirmDeleteAccount()" class="btn btn-primary"
                        style="flex: 1; background: #ef4444; border-color: #ef4444;">
                        <span data-i18n="dashboard.deleteAccountFinal">Delete My Account</span>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Remove Subscription Confirmation Modal -->
    <div id="removeSubscriptionModal" class="modal-overlay" style="display: none;">
        <div class="modal-card" style="max-width: 450px;">
            <div class="modal-header">
                <h3 style="margin: 0; font-size: 1.25rem;" data-i18n="dashboard.confirmRemove">Remove Subscription?</h3>
                <button class="modal-close" onclick="hideRemoveSubscriptionModal()">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M18 6L6 18M6 6l12 12"></path>
                    </svg>
                </button>
            </div>

            <div class="modal-content" style="padding: 24px;">
                <p style="color: var(--text-secondary); margin-bottom: 24px;" data-i18n="dashboard.confirmRemoveDesc">
                    Are you sure you want to remove this subscription? You will no longer receive updates from this
                    account.
                </p>

                <div style="display: flex; gap: 12px;">
                    <button onclick="hideRemoveSubscriptionModal()" class="btn btn-outline" style="flex: 1;">
                        <span data-i18n="dashboard.cancel">Cancel</span>
                    </button>
                    <button onclick="confirmRemoveSubscription()" class="btn btn-primary"
                        style="flex: 1; background: #ef4444; border-color: #ef4444;">
                        <span data-i18n="dashboard.remove">Remove</span>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Add Subscription Modal -->
    <div id="addModal" class="modal-overlay">
        <div class="modal-card">
            <div class="modal-header">
                <h3 style="margin: 0; font-size: 1.5rem;" data-i18n="dashboard.addNewTitle">Add New Subscription</h3>
                <button class="modal-close" onclick="hideAddModal()">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M18 6L6 18M6 6l12 12"></path>
                    </svg>
                </button>
            </div>

            <form id="addSubForm">
                <div class="form-group">
                    <label for="username" class="form-label" data-i18n="dashboard.twitterUsername">Twitter
                        Username</label>
                    <div style="position: relative;">
                        <span style="position: absolute; left: 12px; top: 12px; color: var(--text-tertiary);">@</span>
                        <input type="text" id="username" class="form-input" style="padding-left: 32px;"
                            placeholder="elonmusk" required list="featuredAccounts" autocomplete="off">
                        <datalist id="featuredAccounts">
                            <!-- Populated dynamically by JS -->
                        </datalist>
                    </div>
                    <p style="font-size: 0.85rem; color: var(--text-tertiary); margin-top: 8px;"
                        data-i18n="dashboard.ensurePublic">Ensure the account is
                        public.</p>
                </div>

                <div id="modalError" class="alert alert-error" style="display: none;"></div>

                <div style="display: flex; gap: 12px; margin-top: 24px;">
                    <button type="button" onclick="hideAddModal()" class="btn btn-outline"
                        style="flex: 1; justify-content: center;" data-i18n="dashboard.cancel">Cancel</button>
                    <button type="submit" class="btn btn-primary" style="flex: 1; justify-content: center;"
                        id="addSubBtn" data-i18n="dashboard.add">Add</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Premium Upgrade Modal (Enhanced) -->
    <div id="premiumModal" class="modal-overlay">
        <div class="modal-card" style="max-width: 480px;">
            <div class="modal-header">
                <h2 style="margin: 0; font-size: 1.5rem;" data-i18n="dashboard.premiumModalTitle">Premium'a Ge√ßin</h2>
                <button class="modal-close" onclick="hidePremiumModal()">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M18 6L6 18M6 6l12 12"></path>
                    </svg>
                </button>
            </div>

            <div style="padding: 20px;">
                <div style="text-align: center; margin-bottom: 20px;">
                    <div style="font-size: 3rem; margin-bottom: 8px;">üíé</div>
                    <h3 style="font-size: 1.25rem; margin-bottom: 6px; color: var(--text-primary);"
